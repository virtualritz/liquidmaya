DEPTH = ..
include $(DEPTH)/commondefs.mk
VPATHDD	= $(DEPTH)/bin/objs

LIQDISPLAYOBJSAIR	:= 	liqMayaDisplayDriverAir
LIQRMANPATHAIR		:= 	$${AIRHOME:=/usr/local/Air}
LIQUIDDPYLOCAIR		:=	displayDrivers/Air/
LIQDPYNAMEAIR		:=	d_liqmaya.so
LIQRMANFLAGSAIR		:=	-DAIR
LIQUIDDPYAIR  		:= $(VPATHDD)/$(LIQDPYNAMEAIR)
DPYINCLUDESAIR		:= -I$(LIQRMANPATHAIR)/include
$(VPATHDD)/$(LIQDISPLAYOBJSAIR).$(OBJEXT) : $(LIQDISPLAYOBJSAIR).cpp
	@mkdir -p $(VPATHDD)
	@echo "compiling Air display driver> $@"
	$(CPP) -c $(DPYINCLUDESAIR) $(INCLUDES) $(CPPFLAGS) -o $@ $<
	@echo $@
	$(CPP) -shared $(VPATHDD)/$(LIQDISPLAYOBJSAIR).$(OBJEXT) -I$(LIQRMANPATHAIR) -L$(LIQRMANPATHAIR)/lib -o $(LIQUIDDPYAIR)
	mkdir -p ../$(LIQUIDDPYLOCAIR)
	cp $(LIQUIDDPYAIR) ../$(LIQUIDDPYLOCAIR)

LIQDISPLAYOBJSPIXIE	:= 	liqMayaDisplayDriverPixie
LIQRMANPATHPIXIE	:= 	$${PIXIEHOME:=/usr/local/Pixie}
LIQUIDDPYLOCPIXIE	:=	displayDrivers/Pixie/
LIQDPYNAMEPIXIE		:=	liqmaya.so
LIQRMANFLAGSPIXIE	:=	-DPIXIE
LIQUIDDPYPIXIE  	:= $(VPATHDD)/$(LIQDPYNAMEPIXIE)
DPYINCLUDESPIXIE	:= -I$(LIQRMANPATHPIXIE)/include
$(VPATHDD)/$(LIQDISPLAYOBJSPIXIE).$(OBJEXT) : $(LIQDISPLAYOBJSPIXIE).cpp
