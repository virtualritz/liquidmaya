displaydriverair: $(VPATHDD)/$(LIQDISPLAYOBJSAIR).$(OBJEXT)
displaydriverpixie: $(VPATHDD)/$(LIQDISPLAYOBJSPIXIE).$(OBJEXT)
displaydriverdelight: $(VPATHDD)/$(LIQDISPLAYOBJSDELIGHT).$(OBJEXT)
