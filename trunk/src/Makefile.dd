LIQDISPLAYOBJSAQSIS	:= 	liqMayaDisplayDriverAqsis
LIQRMANPATHAQSIS	:= 	$${AQSIS:=/usr/local/aqsis}
LIQUIDDPYLOCAQSIS	:=	displayDrivers/Aqsis/
LIQDPYNAMEAQSIS		:=	liqmaya.so
LIQRMANFLAGSAQSIS	:=	-DAQSIS
LIQUIDDPYAQSIS  	:= $(VPATHDD)/$(LIQDPYNAMEAQSIS)
DPYINCLUDESAQSIS	:= -I$(LIQRMANPATHAQSIS)/include
$(VPATHDD)/$(LIQDISPLAYOBJSAQSIS).$(OBJEXT) : $(LIQDISPLAYOBJSAQSIS).cpp
