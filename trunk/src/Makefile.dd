	mkdir -p ../$(LIQUIDDPYLOCPIXIE)
	cp $(LIQUIDDPYPIXIE) ../$(LIQUIDDPYLOCPIXIE)

LIQDISPLAYOBJSDELIGHT	:= 	liqMayaDisplayDriver3Delight
LIQRMANPATHDELIGHT	:= 	$${DELIGHT:=/usr/local/3delight}
LIQUIDDPYLOCDELIGHT	:=	displayDrivers/3Delight/
LIQDPYNAMEDELIGHT	:=	liqmaya.dpy
LIQRMANFLAGSDELIGHT	:=	-DDELIGHT
LIQUIDDPYDELIGHT  	:= $(VPATHDD)/$(LIQDPYNAMEDELIGHT)
DPYINCLUDESDELIGHT	:= -I$(LIQRMANPATHDELIGHT)/include
